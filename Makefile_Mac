CC = clang

# Inkluderar alla relevanta header paths
INCLUDES = -I/opt/homebrew/include/SDL2 -Isrc -Iinclude

# Kompilatorflaggor
CFLAGS = -Wall -Wextra -std=c11 $(INCLUDES)

# Länkningsflaggor för SDL2 och SDL2_image
LDFLAGS = -L/opt/homebrew/lib -lSDL2 -lSDL2_image

# Alla .c-filer i src-mappen
SRC = $(wildcard src/*.c)

# Utdatafil
OUT = main

# Standardmål
all: $(OUT)

# Kompilera och länka allt i ett steg
$(OUT): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(OUT) $(LDFLAGS)

# Rensar binären
clean:
	rm -f $(OUT)